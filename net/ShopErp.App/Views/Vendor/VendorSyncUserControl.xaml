<UserControl x:Class="ShopErp.App.Views.Vendor.VendorSyncUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--这个控件需要放在其它控件前面，以便其它控件使用-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" x:Name="tbMessage" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
            <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" Foreground="Red" HorizontalAlignment="Stretch"/>
            <WebBrowser Grid.Column="2" Name="wb1" Source="http://www.go2.cn/supplier" LoadCompleted="wb1_LoadCompleted"/>
        </Grid>

        <StackPanel Orientation="Horizontal">

            <TextBlock Margin="3" Text="GO2出错等待时间(秒)：" VerticalAlignment="Center"/>
            <TextBox Margin="3" VerticalAlignment="Center" Name="tbWaitTime" Width="50" Text="80"/>
            <TextBlock Margin="3" Text="GO2操作间隔时间(秒)：" VerticalAlignment="Center"/>
            <TextBox Margin="3" VerticalAlignment="Center" Name="tbPerTime" Width="50" Text="0"/>
            <Button  Margin="3" VerticalAlignment="Center" Width="80" Content="抓取商家" Name="btnSpiderVendor" Click="btnSpiderVendor_Click"/>
            <Button  Margin="3" VerticalAlignment="Center" Width="80" Content="停止抓取" Name="btnStopSpider" Click="btnStopSpider_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
