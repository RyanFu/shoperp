<UserControl x:Class="ShopErp.App.Views.Taobao.TaobaoTopKeywordUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShopErp.App.Views.Taobao"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox AcceptsReturn="True" Name="tbJson" Margin="2" Grid.Row="0"/>
        <Button Grid.Row="1" Name="btnSave" Margin="3" Content="保存" VerticalAlignment="Center" HorizontalAlignment="Center" Width="60" Click="btnSave_Click"/>
    </Grid>
</UserControl>
